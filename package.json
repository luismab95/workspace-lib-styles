{
  "name": "lib-styles",
  "version": "1.0.0",
  "description": "Lib of styles and statics for microfrontends in workspace project.",
  "main": "src/scss/app.scss",
  "author": "luismab95@gmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/luismab95/workspace-lib-styles.git"
  },
  "keywords": [
    "nginx",
    "sass",
    "css",
    "scss"
  ],
  "scripts": {
    "build": "sass src/scss/app.scss dist/index.css && npm run copy-files",
    "copy-files": "cp -r src/images dist/",
    "watch": "sass --watch src/scss/app.scss:dist/index.css"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "sass": "^1.86.0"
  },
  "engines": {
    "node": ">=22.*.*",
    "npm": ">=10.*.*"
  }
}